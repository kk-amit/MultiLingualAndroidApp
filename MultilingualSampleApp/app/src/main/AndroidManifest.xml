<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="multiling.com.multilingualsampleapp">

    <application
        android:name=".AppApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".modules.Splash.SplashActivity"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar.FullScreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".modules.Main.MainActivity"
            android:label="@string/str_title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".modules.SelectLanguage.SelectLanguageActivity"
            android:label="@string/str_title_activity_select_language"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".modules.localechange.SelectedLanguageActivity"
            android:label="@string/str_title_activity_selected_language"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
        <activity
            android:name=".modules.settings.LanguageSettingActivity"
            android:label="@string/str_title_activity_language_setting"
            android:theme="@style/AppTheme.NoActionBar">
        </activity>
    </application>

</manifest>